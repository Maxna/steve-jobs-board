{{#partial "content"}}

    {{#if editJob}}
        <h1>Edit this Job!</h1>
        <form action="/jobs/{{editJob.id}}/update" method="post">
            <label for="title">Edit this job's title</label>
            <input id="title" name="title" type="text" value="{{editJob.title}}">
            <br>
            <label for="description">Edit this job's description</label>
            <input id="description" name="description" type="text" value="{{editJob.description}}">
            <br>
            <label for="contact">Edit this job's contact</label>
            <input id="contact" name="contact" type="text" value="{{editJob.contact}}">


    {{else}}
            <h1>Add a new Job!</h1>

        <form action="/jobs/new" method="post">
            <label for="title">Job Title</label>
            <input id="title" name="title" type="text">
            <br>
            <label for="description">Job Description</label>
            <input id="description" name="description" type="text">
            <br>
            <label for="contact">Job Contact</label>
            <input id="contact" name="contact" type="text">
    {{/if}}
        <button type="submit" class="btn btn-default">Go!</button>
    </form>
{{/partial}}

{{> layout.hbs}}